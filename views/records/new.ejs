<% layout('layouts/boilerplate')%>


<div class="row">
    <h1 class="text-center">New Record</h1>
    <div class="col-6 offset-3">
        <form action="/records" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="date">Date</label>
                <input class="form-control" type="date" id="date" name="record[date]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="therapy">Therapy</label>
                <input class="form-control" type="text" id="therapy" name="record[therapy]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="note">Note</label>
                <textarea class="form-control" type="text" id="note" name="record[note]" required rows="3"></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Record</button>
            </div>
        </form>
    </div>
</div>