<% layout('layouts/boilerplate')%>

<h1>All Records</h1>
<div>
    <a class="btn btn-primary" href="/records/new">Add Record</a>
</div>


    <% for (let record of records){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                         <a  href="/records/<%=record._id%>"><%= record.therapy %></a>
                    </div>
                </div>
            </div>
    <% }%>

<div>
    <a class="btn btn-primary" href="/profile">Back to profile</a>
</div>
