<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Therapy: <%= record.therapy%></h5>
                <h6 class="card-subtitle mb-2 text-muted">Date: <%= record.date.toDateString() %></h6>
                <p class="card-text"><%= record.note%></p>
                <p class="card-text"><small class="text-muted">Submitted by <%= record.author.username%></small></p>
            </div>
        </div>
        <div class="card-body">
            <a class="card-link btn btn-info" href="/records/index">Show my Record</a>
        </div>
        <div class="card-body">
            <a class="card-link btn btn-success" href="/profile">Back to profile</a>
        </div>
    </div>
</div>