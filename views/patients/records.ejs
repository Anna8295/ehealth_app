<% layout('layouts/boilerplate')%>

<% for (let record of records){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <div class="card-body">
                    <h5 class="card-title">Therapy: <%= record.therapy%></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Date: <%= record.date %></h6>
                    <p class="card-text"><%= record.note%></p>
                    <p class="card-text"><small class="text-muted">Submitted by <%= record.author.username%></small></p>
                </div>
            </div>
        </div>
    </div>
<% }%>

<div>
    <a class="btn btn-primary" href="/profile">Back to profile</a>
</div>